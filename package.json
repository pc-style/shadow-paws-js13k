{
  "name": "js13k-game",
  "version": "1.0.0",
  "description": "JS13K Game Jam Entry - Shadow Paws",
  "main": "index.html",
  "scripts": {
    "start": "python3 -m http.server 8000",
    "serve": "python3 -m http.server 8000",
    
    "analyze": "node build/analyze-clean.js",
    "analyze:quick": "node build/analyze-clean.js --quick",
    
    "build": "node build/build-clean.js",
    "build:watch": "npx chokidar 'src/**/*' -c 'npm run build && npm run analyze'",
    
    "minify-js": "npx terser src/game.js --config-file build/terser.config.json -o dist/game.js",
    "minify-css": "npx clean-css-cli src/style.css -o dist/style.css",
    "minify-html": "npx html-minifier-terser src/index.html --config-file build/html-minifier.config.json -o dist/index.html",
    
    "size": "node build/analyze-clean.js --quick",
    
    "zip": "zip -9 submission.zip index.html",
    "check-limit": "node -e \"const fs=require('fs'); const size=fs.existsSync('submission.zip')?fs.statSync('submission.zip').size:0; const limit=13312; console.log('ZIP: '+size+' bytes, Limit: '+limit+' bytes, '+(size<=limit?'✅ OK':'❌ OVER'));\"",
    
    "clean": "rm -rf dist/* submission.* *.zip",
    "clean:all": "npm run clean && rm -f *.min.* game.zip",
    
    "submission": "npm run clean && npm run build && npm run zip && npm run analyze",
    "test": "npm run build && npm run check-limit",
    
    "dev": "concurrently \"npm run serve\" \"npm run build:watch\"",
    "deploy": "npm run submission"
  },
  "keywords": [
    "js13k",
    "game",
    "javascript",
    "html5",
    "canvas",
    "black-cat",
    "superstition",
    "arcade",
    "minification"
  ],
  "author": "JS13K Developer",
  "license": "MIT",
  "devDependencies": {
    "terser": "^5.24.0",
    "clean-css": "^5.3.2",
    "clean-css-cli": "^5.6.2",
    "cssnano": "^6.0.1",
    "html-minifier-terser": "^7.2.0",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^8.2.2"
  },
  "js13k": {
    "theme": "triskaidekaphobia",
    "entry": "submission.html",
    "limit": 13312,
    "optimization": "aggressive"
  }
}