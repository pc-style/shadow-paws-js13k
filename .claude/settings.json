{
  "permissions": {
    "allow": [
      "Bash(npm run build)",
      "Bash(npm run dev)", 
      "Bash(npm run optimize)",
      "Bash(npm run size-check)",
      "Bash(gulp build)",
      "Bash(webpack --mode production)",
      "Read(src/**)",
      "Read(dist/**)",
      "Read(build/**)",
      "Write(src/**)",
      "Write(dist/**)",
      "Write(build/**)",
      "Read(package.json)",
      "Read(gulpfile.js)",
      "Read(webpack.config.js)",
      "Read(.size-limit.json)"
    ],
    "deny": [
      "Bash(rm -rf *)",
      "Bash(sudo *)",
      "Write(.git/**)",
      "Read(.env*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/validate-file-size.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command", 
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/size-checker.py"
          }
        ]
      }
    ]
  },
  "StatusLine": {
    "command": "uv run .claude/status_lines/js13k_status.py"
  }
}
